<body>
    <!-- Div with Ripple Effect -->
    <div class="my-ripple-div mdc-ripple-surface" style="width: 200px; height: 200px; background-color: #6200ea; color: white; display: flex; align-items: center; justify-content: center; cursor: pointer;">
        Click Me
    </div>

    <!-- Material Design Web JS -->
    <script src="https://cdn.jsdelivr.net/npm/@material/ripple@14.0.0/dist/mdc.ripple.min.js"></script>
    <script>
        // Initialize the ripple effect on the div
        const rippleDiv = document.querySelector('.my-ripple-div');
        mdc.ripple.MDCRipple.attachTo(rippleDiv);
    </script>
